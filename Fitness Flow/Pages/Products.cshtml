@page
@model Fitness_Flow.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";
}

<div class="container mt-5">
    <h2>Available Products</h2>
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="@product.ImageUrl" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title" style="min-height: 2.5em; overflow: hidden;">@product.Name</h5>
                        <p class="card-text" style="min-height: 3em; overflow: hidden;">@product.Description</p>
                        <p class="card-text text-success">@product.Price.ToString("C")</p>
                        <form method="post" asp-page-handler="AddToCart" asp-route-productId="@product.ProductId" class="mt-auto">
                            <button class="btn btn-primary w-100">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
