@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="overlay">
        <div class="hero-content text-white text-center">
            <h1 class="display-4 fw-bold">Welcome to Fitness Flow</h1>
            <p class="lead">Your journey to fitness starts here!</p>
            <a id="register" asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg mt-3">Get Started</a>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mt-5">
    <div class="row text-center">
        <div class="col-md-4">
            <div class="feature-box">
                <h2>Track Your Progress</h2>
                <p>See your fitness journey come to life with real-time progress tracking and insights.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-box">
                <h2>Personalized Plans</h2>
                <p>Our plans adapt to your goals and lifestyle to keep you on track for success.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-box">
                <h2>Community Support</h2>
                <p>Stay motivated with a supportive community of like-minded individuals.</p>
            </div>
        </div>
    </div>
</div>

<!-- Why Choose Us Section -->
<div class="container mt-5 py-5 bg-light rounded">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Why Choose Fitness Flow?</h2>
        <p>We provide everything you need to achieve your fitness goals in one place.</p>
    </div>
    <div class="row text-center">
        <div class="col-md-3">
            <i class="bi bi-bar-chart-line fs-1 text-primary"></i>
            <h4>Real-Time Analytics</h4>
            <p>Track your progress with powerful analytics tools.</p>
        </div>
        <div class="col-md-3">
            <i class="bi bi-person-check fs-1 text-success"></i>
            <h4>Expert Guidance</h4>
            <p>Access advice from certified trainers and fitness experts.</p>
        </div>
        <div class="col-md-3">
            <i class="bi bi-calendar2-check fs-1 text-warning"></i>
            <h4>Flexible Plans</h4>
            <p>Personalize your workouts to fit your schedule.</p>
        </div>
        <div class="col-md-3">
            <i class="bi bi-people fs-1 text-danger"></i>
            <h4>Community</h4>
            <p>Join a vibrant community of fitness enthusiasts.</p>
        </div>
    </div>
</div>

<!-- Call-to-Action Footer -->
<div class="cta-footer bg-primary text-white text-center py-4 mt-5">
    <h2 class="fw-bold">Ready to Start Your Fitness Journey?</h2>
    <p>Join Fitness Flow today and take the first step towards a healthier you!</p>
    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg">Get Started Now</a>
</div>
